#include<bits/stdc++.h>
using namespace std;
#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
#define endl '\n'
#define ll long long int
int main()
{
    optimize();

    int n,a;

    cin>>n;

    for(int i=1;i<=n;i++)
    {
        cin>>a;

        int b=a/2;
        a=a%2+a/2;

        cout<<a<<" "<<b<<endl;
    }

    return 0;
}
