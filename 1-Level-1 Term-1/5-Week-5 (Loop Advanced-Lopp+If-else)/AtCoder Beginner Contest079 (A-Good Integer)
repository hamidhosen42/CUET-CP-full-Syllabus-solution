#include<bits/stdc++.h>
using namespace std;
#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
#define endl '\n'
#define ll long long int
int main()
{
    optimize();

    string s;
    cin>>s;


    if((s[0]==s[1] && s[1]==s[2])||(s[1]==s[2] && s[2]==s[3])){
        cout<<"Yes"<<endl;
    }else{
        cout<<"No"<<endl;
    }
    return 0;
}
